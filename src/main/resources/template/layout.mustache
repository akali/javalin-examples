<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{ title }}</title>
</head>
<body>

  <form action="/" method="POST">
    <textarea name="message" cols="30" rows="10" placeholder="write your message here..."></textarea> <br>
    <input type="text" name="author" placeholder="@Author"> <br>

    <button type="submit">Submit</button> <br>
  </form>

  {{#messages}}
    <b>{{author}}</b>
    <p>{{message}}</p>
    <p>{{localDateTime}}</p>
  {{/messages}}
  {{^messages}}
    No messages
  {{/messages}}
  </body>
</html>